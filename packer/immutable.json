{
    "variables": {
        "machine_type": "f1-micro",
        "ssh_username": "appuser",
        "preemptible": "false",
        "tags": "",
        "network": "default",
        "subnetwork": "default",
        "disk_type": "",
        "disk_size": "10",
        "image_description": ""
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id`}}",
            "image_name": "reddit-full-{{timestamp}}",
            "image_family": "reddit-full",
            "image_description": "{{user `image_description`}}",
            "source_image_family": "{{user `source_image_family`}}",
            "zone": "europe-west1-b",
            "ssh_username": "{{user `ssh_username`}}",
            "machine_type": "{{user `machine_type`}}",
            "disk_type": "{{user `disk_type`}}",
            "disk_size": "{{user `disk_size`}}",
            "network": "{{user `network`}}",
            "subnetwork": "{{user `subnetwork`}}",
            "preemptible": "{{user `preemptible`}}",
            "tags": "{{user `tags`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": ["pwd", "git clone -b monolith https://github.com/express42/reddit.git", "cd reddit && bundle install"]
        },
        {
            "type": "file",
            "source": "packer/files/puma.service",
            "destination": "/tmp/puma.service"
        },
        {
            "type": "shell",
            "inline": [
                "mv /tmp/puma.service /etc/systemd/system/puma.service",
                "systemctl daemon-reload",
                "systemctl enable puma.service"
            ],
            "execute_command": "sudo {{.Path}}"
        }
    ]
}
